<%= stylesheet_link_tag 'components/login_page' %>

<div class="container-log" style="height:580px;">
<div class="row justify-content-center mt-5">
    <!-- Form content -->
    <div class="col-md-3 border rounded p-4 bg-light">
      <h2 class="text-center mb-4"><strong>Log in</strong></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>

    <!-- Image container -->
    <div class="col-md-3 d-flex align-items-stretch ">
<%= image_tag('6542912.jpg', class: 'img-fluid rounded', style: 'width:350px; height:450px;') %>
    </div>
  </div>
</div>
