<div class="container">
  <div class="row">
    <div class="col">
      <h2><strong><%= @course.title %></strong></h2>
      <p><%= @course.description %></p>
      <p><%= @course.length %> weeks</p>

      <!-- Carrousel Bootstrap -->
      <div id="imageCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% @course_images.each_with_index do |image, index| %>
            <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
              <% puts "DEBUG: image=#{image.inspect}" %>
              <%= cl_image_tag("course_#{@course.id}_#{index + 1}", class: 'd-block w-50 h-50', alt: "Image #{index + 1}") %>
            </div>
          <% end %>
        </div>
        <button class="carousel-control-prev custom-carousel-controls" type="button" data-bs-target="#imageCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next custom-carousel-controls" type="button" data-bs-target="#imageCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <!-- Fin du carrousel Bootstrap -->

      <%= link_to 'Back to courses', courses_path, class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>

<!-- Ajoutez les scripts JS de Bootstrap à la fin du fichier si nécessaire -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
