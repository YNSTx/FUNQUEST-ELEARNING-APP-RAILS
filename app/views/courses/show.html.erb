<%= stylesheet_link_tag 'components/course_show' %>


<div class="container ">
  <div class="row">
    <div class="col contcourse">
      <h2><strong><%= @course.title %></strong></h2>
      <div id="imageCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% @course.course_images.each_with_index do |image, index| %>
            <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
              <div class="row">
              <div class="col-md-8 position-relative center-div">
                  <%= cl_image_tag(image.key, class: 'd-block w-100 h-100', alt: "Image #{index + 1}") %>
                  <button class="carousel-control-prev custom-carousel-controls" type="button" data-bs-target="#imageCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                  </button>
                  <button class="carousel-control-next custom-carousel-controls" type="button" data-bs-target="#imageCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                  </button>
                </div>
                <div class="col-md-8 center-div">
                  <%= @course.image_description[index] %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="d-flex justify-content-between mt-3 course">
          <div class="d-flex justify-content-start mt-3">
            <%= link_to 'Back to courses', courses_path, class: 'btn btn-secondary mt-3' %>
          </div>
          <div class="d-flex justify-content-end mt-3">
            <%= link_to 'Pass the quiz', course_quiz_path(@course), class: 'btn btn-secondary mt-3' %>
          </div>
      </div>

    </div>
  </div>
</div>
